<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.you.dummyonlineshop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".main.MainActivity" android:theme="@style/AppTheme.OverlapSystemBar"/>
        <activity android:name=".order.OrderActivity" android:theme="@style/AppTheme.OverlapSystemBar"/>
        <activity android:name=".search.SearchActivity" android:theme="@style/AppTheme.OverlapSystemBar"/>
        <activity android:name=".address.AddressActivity" android:theme="@style/AppTheme.OverlapSystemBar"/>
        <activity android:name=".profile.ProfileActivity" android:theme="@style/AppTheme.OverlapSystemBar"/>
        <activity android:name=".security.SecurityActivity" android:theme="@style/AppTheme.OverlapSystemBar"/>
        <activity android:name=".category.CategoryActivity" android:theme="@style/AppTheme.OverlapSystemBar"/>
        <activity android:name=".searchitem.SearchItemActivity" android:theme="@style/AppTheme.OverlapSystemBar"/>
        <activity android:name=".itemdetail.ItemDetailActivity" android:theme="@style/AppTheme.OverlapSystemBar"/>
        <activity android:name=".addaddress.AddAddressActivity" android:theme="@style/AppTheme.OverlapSystemBar"/>
        <activity android:name=".transaction.TransactionActivity" android:theme="@style/AppTheme.OverlapSystemBar"/>
        <activity android:name=".notification.NotificationActivity" android:theme="@style/AppTheme.OverlapSystemBar"/>
        <activity android:name=".edititemcart.EditItemCartActivity" android:theme="@style/AppTheme.OverlapSystemBar"/>
        <activity android:name=".searchcategory.SearchCategoryActivity" android:theme="@style/AppTheme.OverlapSystemBar"/>
        <activity android:name=".splashscreen.SplashScreenActivity" android:theme="@style/AppTheme.OverlapSystemBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
