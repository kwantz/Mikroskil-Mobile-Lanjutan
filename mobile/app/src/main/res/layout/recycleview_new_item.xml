<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/gambar"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/barang"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#000"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Title"
        android:layout_below="@id/gambar"/>

    <TextView
        android:id="@+id/harga_sesudah_diskon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_below="@id/barang"
        android:text="Harga"/>

    <TextView
        android:id="@+id/harga_sebelum_diskon"
        android:background="@drawable/strikethrough"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="harga"
        android:layout_below="@id/harga_sesudah_diskon"/>

    <TextView
        android:id="@+id/diskon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-20%"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/harga_sebelum_diskon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/colorSecondary"
        android:textColor="@color/text"
        android:textSize="10dp"
        android:text="NEW"/>
</RelativeLayout>