<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text">

    <RelativeLayout android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView android:id="@+id/btn_back"
            app:srcCompat="@drawable/ic_arrow_back_24dp"
            android:tint="@color/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"/>

        <ImageView android:id="@+id/btn_logout"
            app:srcCompat="@drawable/ic_input_black_24dp"
            android:tint="@color/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_alignParentRight="true"/>

        <ImageView app:srcCompat="@drawable/ic_person_24dp"
            android:tint="@color/colorPrimary"
            android:layout_gravity="center"
            android:background="@drawable/circle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:paddingTop="@dimen/button_vertical_margin"
            android:paddingLeft="@dimen/button_horizontal_margin"
            android:paddingRight="@dimen/button_horizontal_margin"
            android:paddingBottom="@dimen/button_vertical_margin"
            android:layout_centerHorizontal="true"
            android:id="@+id/logo_person"/>

        <TextView android:id="@+id/profile_name"
            android:text="Erick Kwantan"
            android:textColor="@color/text"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo_person"
            android:layout_centerHorizontal="true"/>

        <include layout="@layout/content_profile_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/profile_name"/>
    </RelativeLayout>

</ScrollView>