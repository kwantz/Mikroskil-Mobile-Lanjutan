<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logo"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"/>

    <TextView android:text="Silakan dibeli. Kami sangat membutuhkan uang anda untuk kehidupan kami setiap hari"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:textStyle="bold"
        android:textSize="18dp"
        android:paddingRight="@dimen/button_vertical_margin"
        android:paddingLeft="@dimen/button_vertical_margin"
        android:textAlignment="center"
        android:layout_centerVertical="true"/>

    <ProgressBar android:id="@+id/progress_bar"
        android:indeterminateTint="@color/colorSecondary"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"/>

    <TextView android:text="Â© Copyright 2018 by Zro2iro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:paddingTop="@dimen/button_horizontal_margin"
        android:paddingBottom="@dimen/button_horizontal_margin"/>
</RelativeLayout>